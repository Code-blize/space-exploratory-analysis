-- To show the success rate per decade
Success Rate (Decade) =
VAR currentDecade = SELECTEDVALUE('cleaned_space_missions'[Decade])
RETURN
DIVIDE(
    CALCULATE(
        COUNTROWS('cleaned_space_missions'),
        'cleaned_space_missions'[MissionStatus] = "Success",
        'cleaned_space_missions'[Decade] = currentDecade
    ),
    CALCULATE(
        COUNTROWS('cleaned_space_missions'),
        'cleaned_space_missions'[Decade] = currentDecade
    )
)

-- To get the Golden Decade
Golden Decade =
VAR DecadeSummary =
    SUMMARIZE(
        cleaned_space_missions,
        cleaned_space_missions[Year],
        "Missions", COUNT(cleaned_space_missions[Mission])
    )
VAR MaxDecade =
    MAXX(DecadeSummary, [Missions])
RETURN
CALCULATE(
    MAX(cleaned_space_missions[Year]),
    FILTER(
        cleaned_space_missions,
        COUNT(cleaned_space_missions[Mission]) = MaxDecade
    )
)
